<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.TabLayout
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextColor="@android:color/white"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabBackground="@color/toolsBar"
        android:id="@+id/image_tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"></android.support.design.widget.TabLayout>

    <com.cosplay.wang.commonapp.view.widgits.HomeViewPager
        android:layout_below="@+id/image_tablayout"
        android:id="@+id/image_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.cosplay.wang.commonapp.view.widgits.HomeViewPager>

</RelativeLayout>